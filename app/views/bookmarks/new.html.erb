<div class="container mt-4">
  <h2>Add a Bookmark</h2>
  <%= simple_form_for([@list, @bookmark], html: { class: "form" }) do |f| %>
    <div class="mb-3">
      <%= f.association :movie, collection: Movie.all, prompt: "Choose a movie", input_html: { class: "form-select" } %>
    </div>
    <div class="mb-3">
      <%= f.input :comment, placeholder: "Add a comment", input_html: { class: "form-control" } %>
    </div>
    <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to the List", list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
