<div class="container mt-4">
  <h1 class="mb-4">Your Lists</h1>

  <div class="mb-3">
    <%= link_to "Create New List", lists_new_path, class: "btn btn-primary" %>
  </div>

  <% if @list_all.any? %>
    <div class="list-group">
      <% @list_all.each do |list| %>
        <a href="<%= show_list_path(list) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <span><%= list.name %></span>
          <span class="badge bg-secondary">#<%= list.id %></span>
        </a>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You don't have any lists yet. Click the button above to create your first one!</p>
  <% end %>
</div>
