<div class="container mt-4">
  <h1 class="mb-4">List Details</h1>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= @list.name %></h2>
    </div>
    <div class="card-body">
      <p class="card-text">Here are the details for your list named "<strong><%= @list.name %></strong>".</p>
        <h3>Movies in this List:</h3>
      <% if @list.bookmarks.any? %>
        <ul>
          <% @list.bookmarks.each do |bookmark| %>
            <li>
              <strong><%= bookmark.movie.title %></strong>
              <p><%= bookmark.comment %></p>
              <p><%= bookmark.movie.rating %></p>
              <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> Poster" class="img-fluid" style="max-width: 200px; height: auto;">
              <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No movies added yet.</p>
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to All Lists", lists_path, class: "btn btn-secondary" %>
    <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
    <%# <%= link_to "Delete List", list_path(@list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" }, class: "btn btn-danger" %>
  </div>
</div>
